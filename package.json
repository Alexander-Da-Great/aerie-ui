    "cookie": "^0.4.1",
    "d3-axis": "^2.1.0",
    "d3-brush": "^2.1.0",
    "d3-drag": "^2.0.0",
    "d3-quadtree": "^2.0.0",
    "d3-scale": "^3.3.0",
    "d3-scale-chromatic": "^2.0.0",
